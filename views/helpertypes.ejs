<% include partials/header %>

<div class = "container" style="margin-left: auto; margin-right:auto; display:block; width:50%;">
  <h1>PDX Accessible Services</h1>
  <p>Tell us a bit about yourself!</p>
  
  <div style="width:30%; margin: 25px auto;">
            <form action = "/shelters" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" name="quantity" placeholder="age">
                </div>
                
                <div class="form-group">
                  <input type="radio" name="gender" value="male"> Male<br>
                  <input type="radio" name="gender" value="female"> Female<br>
                  <input type="radio" name="gender" value="other"> Other<br>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
  </div> 

